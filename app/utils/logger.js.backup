/**
 * Утилита для условного логирования
 * Выводит логи только в development режиме
 */

const isDevelopment = process.env.NODE_ENV === 'development';

const logger = {
  log: (...args) => {
    if (isDevelopment) {
      console.log(...args);
    }
  },
  
  error: (...args) => {
    if (isDevelopment) {
      console.error(...args);
    }
  },
  
  warn: (...args) => {
    if (isDevelopment) {
      console.warn(...args);
    }
  },
  
  info: (...args) => {
    if (isDevelopment) {
      console.info(...args);
    }
  },
  
  debug: (...args) => {
    if (isDevelopment) {
      console.debug(...args);
    }
  },
  
  // Для production логирования критических ошибок
  critical: (...args) => {
    console.error('[CRITICAL]', ...args);
    // Здесь можно добавить отправку в Sentry или другой сервис мониторинга
  }
};

export default logger;