# ===== ОСНОВНЫЕ ПЕРЕМЕННЫЕ =====
# Окружение: development, production
NODE_ENV=production

# === API КЛЮЧИ ===
# Google Gemini API ключ (ОБЯЗАТЕЛЬНО!)
# Получить на: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# === БЕЗОПАСНОСТЬ ===
# JWT секретный ключ для токенов (генерировать: openssl rand -base64 64)
JWT_SECRET=your_jwt_secret_key_here

# Секретный ключ для NextAuth
NEXTAUTH_SECRET=your_nextauth_secret_here

# Хеш пароля администратора (генерировать: node scripts/generate-password-hash.js)
ADMIN_PASSWORD_HASH=$2b$10$your_password_hash_here

# === БАЗА ДАННЫХ ===
# PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/neuroexpert
POSTGRES_PASSWORD=your_postgres_password_here

# Redis
REDIS_URL=redis://localhost:6379

# === TELEGRAM УВЕДОМЛЕНИЯ ===
# Токен Telegram бота
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ID чата для уведомлений
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# === ПУБЛИЧНЫЕ ПЕРЕМЕННЫЕ ===
# URL сайта
NEXT_PUBLIC_SITE_URL=https://your-site.com

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Яндекс.Метрика
NEXT_PUBLIC_YANDEX_METRICA_ID=12345678

# === EMAIL НАСТРОЙКИ ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your_app_password_here

# === SENTRY (ОПЦИОНАЛЬНО) ===
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# === ТОКЕНЫ ===
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# === CSP REPORTING ===
CSP_REPORT_URI=/api/csp-report

# === DEPLOYMENT SPECIFIC ===
# Для Vercel
VERCEL_URL=

# Для Netlify
NETLIFY=true

# Для Render
RENDER=true

# Режим вывода для Next.js (standalone для Docker)
NEXT_OUTPUT_MODE=standalone