# ===================================
# NEUROEXPERT PLATFORM CONFIGURATION
# ===================================
# Copy this file to .env and fill in your actual values

# ===================================
# DATABASE CONFIGURATION
# ===================================
DATABASE_URL=postgresql://username:password@localhost:5432/neuroexpert
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=neuroexpert
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ===================================
# AUTHENTICATION & SECURITY
# ===================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_32_characters_minimum
JWT_SECRET=your_jwt_secret_here_32_characters_minimum
NEXTAUTH_SECRET=your_nextauth_secret_here

# Token expiration settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=5

# ===================================
# AI SERVICES
# ===================================
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ===================================
# TELEGRAM INTEGRATION
# ===================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ===================================
# MONITORING & ANALYTICS
# ===================================
SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_GA_ID=your_google_analytics_id
NEXT_PUBLIC_YM_ID=your_yandex_metrica_id

# ===================================
# REDIS CONFIGURATION
# ===================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# ===================================
# CORS & SECURITY
# ===================================
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
ALLOWED_HOSTS=localhost,yourdomain.com

# ===================================
# ENVIRONMENT SETTINGS
# ===================================
NODE_ENV=development
PORT=3000
NEXT_TELEMETRY_DISABLED=1

# ===================================
# DOCKER & PRODUCTION
# ===================================
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# ===================================
# EMAIL CONFIGURATION (Optional)
# ===================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here

# ===================================
# FILE STORAGE (Optional)
# ===================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# ===================================
# DEVELOPMENT ONLY
# ===================================
DEBUG=false
LOG_LEVEL=info

# ===================================
# DEPLOYMENT SPECIFIC
# ===================================
# Vercel
VERCEL_URL=your_vercel_url

# Netlify
NETLIFY_SITE_ID=your_netlify_site_id

# Railway
RAILWAY_STATIC_URL=your_railway_url