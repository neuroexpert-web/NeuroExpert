# NeuroExpert Environment Variables
# Copy this file to .env and fill in your values

# ====================
# Application Settings
# ====================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_APP_NAME=NeuroExpert
PORT=3000

# ====================
# AI & API Keys
# ====================
# Google Gemini API Key (required)
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=

# OpenAI API Key (optional, for fallback)
OPENAI_API_KEY=

# Claude API Key (optional, for advanced features)
ANTHROPIC_API_KEY=

# ====================
# Database Configuration
# ====================
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/neuroexpert

# Redis URL (optional, for caching)
REDIS_URL=redis://localhost:6379

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ====================
# Authentication & Security
# ====================
# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=

# Admin password hash (generate with: npm run generate:password)
ADMIN_PASSWORD_HASH=

# Session settings
SESSION_MAX_AGE=86400
REFRESH_TOKEN_EXPIRES_IN=604800

# ====================
# Telegram Integration
# ====================
# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=

# Your Telegram chat ID for notifications
TELEGRAM_CHAT_ID=

# Webhook URL (optional)
TELEGRAM_WEBHOOK_URL=

# ====================
# Email Configuration (Optional)
# ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@neuroexpert.ai

# ====================
# Analytics & Monitoring (Optional)
# ====================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Sentry DSN for error tracking
SENTRY_DSN=

# LogRocket project ID
LOGROCKET_PROJECT_ID=

# ====================
# Rate Limiting
# ====================
# Time window in milliseconds
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ====================
# File Upload Settings
# ====================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ====================
# Feature Flags
# ====================
ENABLE_AI_ASSISTANT=true
ENABLE_TELEGRAM_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=false

# ====================
# External Services (Optional)
# ====================
# Payment Gateway
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# Cloud Storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# ====================
# Development Settings
# ====================
# Disable telemetry in development
NEXT_TELEMETRY_DISABLED=1

# Enable verbose logging
DEBUG=app:*

# Mock external services
USE_MOCK_SERVICES=false