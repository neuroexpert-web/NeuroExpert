# ===================================
# ПРИМЕР ФАЙЛА ПЕРЕМЕННЫХ ОКРУЖЕНИЯ
# ===================================
# Скопируйте этот файл в .env.local или .env.production
# и заполните реальными значениями

# Основные настройки
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://neuroexpert.ai

# API ключи для AI
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Безопасность
JWT_SECRET=your_jwt_secret_here_use_openssl_rand_base64_32
ADMIN_PASSWORD_HASH=your_bcrypt_hash_here_use_npm_run_generate_password

# База данных
DATABASE_URL=postgresql://user:password@localhost:5432/neuroexpert
REDIS_URL=redis://localhost:6379

# Telegram уведомления
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email настройки (опционально)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Аналитика
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_YANDEX_METRIKA_ID=XXXXXXXXX

# Sentry мониторинг (опционально)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Логирование
LOG_LEVEL=info

# CSP настройки
CSP_REPORT_URI=/api/csp-report

# Кастомные AI агенты (опционально)
CUSTOM_AGENT_ENDPOINT=https://your-custom-ai-endpoint.com
CUSTOM_AGENT_API_KEY=your_custom_api_key