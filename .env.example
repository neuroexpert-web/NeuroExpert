# ========================================
# ENVIRONMENT VARIABLES EXAMPLE
# ========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control!

# Node Environment
NODE_ENV=production

# ========================================
# AUTHENTICATION & SECURITY
# ========================================

# JWT Secret for token signing (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-key-here

# Admin password hash (generate with: npm run generate:password)
ADMIN_PASSWORD_HASH=your-bcrypt-hash-here

# NextAuth Secret (for future implementation)
NEXTAUTH_SECRET=your-nextauth-secret-here

# ========================================
# AI SERVICES
# ========================================

# Google Gemini API Key
GOOGLE_GEMINI_API_KEY=your-gemini-api-key-here

# Anthropic Claude API Key (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ========================================
# DATABASE
# ========================================

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=neuroexpert

# Database URL (constructed from above or direct)
DATABASE_URL=postgresql://postgres:your-password@localhost:5432/neuroexpert

# ========================================
# REDIS (Caching)
# ========================================

REDIS_URL=redis://localhost:6379

# ========================================
# NOTIFICATIONS
# ========================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Email Configuration (optional)
SENDGRID_API_KEY=your-sendgrid-api-key
ADMIN_EMAIL=admin@example.com

# ========================================
# ANALYTICS
# ========================================

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Yandex Metrica
NEXT_PUBLIC_YM_ID=12345678

# ========================================
# MONITORING
# ========================================

# Sentry DSN (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ========================================
# DEPLOYMENT
# ========================================

# Base URL
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# API URL (if different from base)
NEXT_PUBLIC_API_URL=https://api.your-domain.com

# ========================================
# FEATURE FLAGS
# ========================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_TELEGRAM=true
NEXT_PUBLIC_ENABLE_SENTRY=false

# ========================================
# RATE LIMITING
# ========================================

# API Rate Limits
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# SECURITY HEADERS
# ========================================

# Content Security Policy
CSP_REPORT_URI=https://your-domain.com/api/csp-report
