# NeuroExpert Environment Variables Template
# Скопируйте этот файл в .env.local и заполните значениями

# Gemini AI API
GEMINI_API_KEY=your_gemini_api_key_here

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Яндекс Метрика
NEXT_PUBLIC_YM_ID=XXXXXXXXX

# Sentry Error Tracking
SENTRY_DSN=https://xxxx@sentry.io/xxxx
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# API Keys для интеграций
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database (если используется)
DATABASE_URL=postgresql://user:password@localhost:5432/neuroexpert

# Redis (для кеширования)
REDIS_URL=redis://localhost:6379

# SMTP для отправки email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Security
JWT_SECRET=your_very_long_random_string_here
CSRF_SECRET=another_very_long_random_string_here

# External Services
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/XXX/XXX

# Environment
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://api.neuroexpert.io

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_ANALYTICS=true
ENABLE_PWA=false
ENABLE_NOTIFICATIONS=false