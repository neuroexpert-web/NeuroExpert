# ================================
# üîê NEUROEXPERT ENVIRONMENT VARIABLES
# ================================
# Copy this file to .env.local and fill in the values
# DO NOT commit .env.local to version control!

# ================================
# üåê APPLICATION SETTINGS
# ================================
# Node environment: development | production | test
NODE_ENV=production

# Public API URL (your domain)
NEXT_PUBLIC_API_URL=https://your-domain.com

# Application port (default: 3000)
PORT=3000

# ================================
# ü§ñ AI SERVICES
# ================================
# Google Gemini API Key
# Get it from: https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=

# Claude API Key (optional)
# Get it from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# ================================
# üîí SECURITY
# ================================
# JWT Secret for token signing (generate with: openssl rand -base64 32)
JWT_SECRET=

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=

# Admin password hash (generate with: npm run generate:password)
ADMIN_PASSWORD_HASH=

# Secret key for Python backend (generate with: openssl rand -hex 32)
SECRET_KEY=

# ================================
# üí¨ TELEGRAM INTEGRATION (Optional)
# ================================
# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=

# Your Telegram Chat ID
TELEGRAM_CHAT_ID=

# ================================
# üóÑÔ∏è DATABASE
# ================================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/neuroexpert

# Database settings (if not using DATABASE_URL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=neuroexpert
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ================================
# üìä ANALYTICS (Optional)
# ================================
# Google Analytics ID (format: G-XXXXXXXXXX)
NEXT_PUBLIC_GA_ID=

# Yandex Metrica ID (numbers only)
NEXT_PUBLIC_YANDEX_METRICA_ID=

# Sentry DSN for error tracking
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# ================================
# üìß EMAIL (Optional)
# ================================
# SMTP Server settings
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=
EMAIL_SERVER_PASSWORD=
EMAIL_FROM=noreply@neuroexpert.com

# SendGrid API Key (alternative to SMTP)
SENDGRID_API_KEY=

# Admin email for notifications
ADMIN_EMAIL=

# ================================
# üöÄ DEPLOYMENT PLATFORMS
# ================================
# Vercel specific
VERCEL_URL=

# Netlify specific
NETLIFY_URL=

# Render specific
RENDER_EXTERNAL_URL=

# ================================
# üõ†Ô∏è DEVELOPMENT
# ================================
# Enable debug mode
DEBUG=false

# Playwright test URL
PLAYWRIGHT_TEST_BASE_URL=http://localhost:3000

# ================================
# üìù NOTES
# ================================
# 1. Never commit real secrets to version control
# 2. Use different values for development and production
# 3. Rotate secrets regularly
# 4. Use strong, randomly generated secrets
# 5. Keep this file updated with new variables

# ================================
# üîß GENERATING SECRETS
# ================================
# Generate JWT_SECRET or NEXTAUTH_SECRET:
# $ openssl rand -base64 32
#
# Generate SECRET_KEY for Python:
# $ openssl rand -hex 32
#
# Generate password hash:
# $ npm run generate:password -- "your-password"
#
# Or use online generators (for dev only):
# https://generate-secret.vercel.app/32
